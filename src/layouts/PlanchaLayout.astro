---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
    data: CollectionEntry<'planchas'>['data'];
    slug: string;
    prev?: CollectionEntry<'planchas'> | null;
    next?: CollectionEntry<'planchas'> | null;
}

const { data, slug, prev, next } = Astro.props;
const { title, date, grado, tema, autor, logia, valle, orden } = data;

const formattedDate = date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

// SEO mejorado
const description = `Plancha ${orden} sobre ${tema} - Grado ${grado}. ${title}`;
const keywords = [
    tema,
    grado,
    'masonería',
    'Lavagnini',
    'filosofía hermética',
    'geometría sagrada',
    'construcción interior',
    'manual del maestro',
    autor,
    'planchas masónicas'
].join(', ');

const publishedTime = date.toISOString();
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<BaseLayout
        title={`${title} | El Damero`}
        description={description}
        type="article"
>
    <!-- Meta tags adicionales -->
    <Fragment slot="head">
        <meta name="keywords" content={keywords} />
        <meta name="author" content={autor} />
        <meta property="article:published_time" content={publishedTime} />
        <meta property="article:modified_time" content={publishedTime} />
        <meta property="article:author" content={autor} />
        <meta property="article:section" content={grado} />
        <meta property="article:tag" content={tema} />
    </Fragment>

    <div class="plancha-container">
        <Breadcrumbs grado={grado} title={title} />

        <div class="plancha-header">
            <div class="invocacion">A∴ L∴ G∴ D∴ G∴ A∴ D∴ U∴</div>

            {logia && <div class="logia-info">R∴ L∴ S∴ {logia}</div>}
            {valle && <div class="logia-info">Vall∴ de {valle}, {formattedDate}</div>}

            <div class="dirigido">V∴ M∴ • Q∴ H∴ Vig∴ • QQ∴ HH∴ Todos</div>

            <div class="plancha-numero">Plancha Nº {orden.toString().padStart(2, '0')}</div>
            <h1>{title}</h1>

            <div class="meta">
                <div class="meta-item">
                    <span class="meta-label">Grado:</span>
                    <span>{grado}</span>
                </div>
                <div class="meta-item">
                    <span class="meta-label">Tema:</span>
                    <span>{tema}</span>
                </div>
            </div>
        </div>

        <article class="plancha-content">
            <slot />
        </article>

        <aside class="internal-links">
            <h3>Explorar más sobre {tema}</h3>
            <p>
                Descubre otras <a href="/">planchas sobre {tema}</a> o
                explora el <a href={`/#${grado.toLowerCase()}`}>grado de {grado}</a>.
            </p>
        </aside>

        <div class="firmas">
            <div class="firma">
                <div class="rango">{autor}</div>
                <div class="rango">M∴ M∴</div>
                <div>S∴ F∴ U∴</div>
            </div>
        </div>

        <nav class="plancha-nav">
            <div class="nav-links">
                {prev ? (
                        <a href={`/planchas/${prev.slug}`} class="nav-link prev">
                            <span class="nav-arrow">←</span>
                            <div class="nav-info">
                                <span class="nav-label">Anterior</span>
                                <span class="nav-title">{prev.data.title}</span>
                            </div>
                        </a>
                ) : (
                        <div class="nav-link disabled"></div>
                )}

                <a href="/" class="nav-link home">
                    <span>⌂</span>
                    <span>Índice</span>
                </a>

                {next ? (
                        <a href={`/planchas/${next.slug}`} class="nav-link next">
                            <div class="nav-info">
                                <span class="nav-label">Siguiente</span>
                                <span class="nav-title">{next.data.title}</span>
                            </div>
                            <span class="nav-arrow">→</span>
                        </a>
                ) : (
                        <div class="nav-link disabled"></div>
                )}
            </div>
        </nav>
    </div>

    <!-- JSON-LD Schema mejorado -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": title,
        "description": description,
        "author": {
            "@type": "Person",
            "name": autor
        },
        "datePublished": publishedTime,
        "dateModified": publishedTime,
        "inLanguage": "es-AR",
        "keywords": keywords,
        "articleSection": grado,
        "about": {
            "@type": "Thing",
            "name": tema,
            "description": `Estudio masónico sobre ${tema}`
        },
        "publisher": {
            "@type": "Organization",
            "name": "El Damero",
            "url": "https://eldamero.com",
            "logo": {
                "@type": "ImageObject",
                "url": "https://eldamero.com/logo.png"
            }
        },
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": canonicalURL.toString()
        }
    })} />
</BaseLayout>

<style>
    .plancha-container {
        background: var(--damero-dark);
        border: 2px solid var(--damero-gold);
        padding: var(--spacing-xl);
        box-shadow: 0 0 30px rgba(201, 169, 97, 0.2);
    }

    .plancha-header {
        text-align: center;
        margin-bottom: var(--spacing-lg);
        padding-bottom: var(--spacing-md);
        border-bottom: 1px solid var(--damero-gold);
    }

    .invocacion {
        margin-bottom: var(--spacing-sm);
    }

    .logia-info {
        font-size: 0.85rem;
        color: var(--damero-gray);
        margin-bottom: var(--spacing-xs);
    }

    .dirigido {
        font-style: italic;
        color: var(--damero-gray-light);
        margin-bottom: var(--spacing-sm);
        font-size: 0.95rem;
    }

    .plancha-numero {
        font-size: 0.9rem;
        color: var(--damero-gold);
        letter-spacing: 0.2em;
        margin-bottom: var(--spacing-xs);
        font-weight: bold;
    }

    h1 {
        margin-bottom: var(--spacing-sm);
        font-size: 1.8rem;
    }

    .meta {
        display: flex;
        gap: var(--spacing-lg);
        font-size: 0.9rem;
        color: var(--damero-gray);
        margin-top: var(--spacing-sm);
        flex-wrap: wrap;
        justify-content: center;
    }

    .meta-item {
        display: flex;
        gap: var(--spacing-xs);
    }

    .meta-label {
        color: var(--damero-gold);
        font-weight: bold;
    }

    .plancha-content {
        margin: var(--spacing-lg) 0;
        line-height: 1.8;
    }

    .plancha-content :global(p) {
        margin-bottom: var(--spacing-sm);
        text-align: justify;
    }

    .plancha-content :global(h2) {
        color: var(--damero-gold);
        margin-top: var(--spacing-md);
        margin-bottom: var(--spacing-sm);
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .plancha-content :global(h3) {
        color: var(--damero-gray-light);
        margin-top: var(--spacing-sm);
        font-size: 1rem;
    }

    .plancha-content :global(ul),
    .plancha-content :global(ol) {
        margin-left: var(--spacing-lg);
        margin-bottom: var(--spacing-sm);
    }

    .plancha-content :global(li) {
        margin-bottom: var(--spacing-xs);
    }

    .plancha-content :global(em) {
        color: var(--damero-gold);
        font-style: italic;
    }

    .plancha-content :global(strong) {
        color: var(--damero-gold-light);
    }

    .internal-links {
        background: rgba(201, 169, 97, 0.05);
        border-left: 3px solid var(--damero-gold);
        padding: var(--spacing-md);
        margin: var(--spacing-lg) 0;
    }

    .internal-links h3 {
        font-size: 1rem;
        margin-bottom: var(--spacing-xs);
        text-transform: none;
        letter-spacing: normal;
    }

    .internal-links p {
        margin: 0;
        font-size: 0.95rem;
        text-align: left;
    }

    .internal-links a {
        color: var(--damero-gold);
        text-decoration: underline;
    }

    .firmas {
        margin-top: var(--spacing-xl);
        padding-top: var(--spacing-lg);
        border-top: 1px solid var(--damero-gold);
        text-align: center;
        font-size: 0.9rem;
    }

    .firma {
        margin-bottom: var(--spacing-sm);
    }

    .rango {
        color: var(--damero-gold);
        font-weight: bold;
    }

    .plancha-nav {
        margin-top: var(--spacing-lg);
        padding-top: var(--spacing-sm);
    }

    .nav-links {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: var(--spacing-sm);
        align-items: center;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: var(--spacing-xs);
        padding: var(--spacing-sm);
        border: 1px solid var(--damero-gold);
        color: var(--damero-gold);
        text-decoration: none;
        transition: var(--transition-smooth);
        min-height: 60px;
    }

    .nav-link.disabled {
        border-color: var(--damero-border);
        opacity: 0.3;
    }

    .nav-link.prev {
        justify-content: flex-start;
    }

    .nav-link.next {
        justify-content: flex-end;
        grid-column: 3;
    }

    .nav-link.home {
        justify-content: center;
        flex-direction: column;
        gap: 0.25rem;
        font-size: 0.9rem;
        grid-column: 2;
    }

    .nav-link:not(.disabled):hover {
        background: var(--damero-gold);
        color: var(--damero-black);
    }

    .nav-arrow {
        font-size: 1.5rem;
        line-height: 1;
    }

    .nav-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .nav-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        opacity: 0.8;
    }

    .nav-title {
        font-size: 0.9rem;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .plancha-container {
            padding: var(--spacing-md);
        }

        h1 {
            font-size: 1.5rem;
        }

        .meta {
            flex-direction: column;
            gap: var(--spacing-xs);
        }

        .nav-links {
            grid-template-columns: 1fr;
            gap: var(--spacing-xs);
        }

        .nav-link.prev,
        .nav-link.next,
        .nav-link.home {
            grid-column: 1;
        }

        .nav-link.prev {
            order: 1;
        }

        .nav-link.home {
            order: 2;
        }

        .nav-link.next {
            order: 3;
        }
    }
</style>