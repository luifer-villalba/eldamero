---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ShareButtons from '../components/ShareButtons.astro';
import ScrollToTopHome from '../components/ScrollToTopHome.astro';

interface Props {
    data: CollectionEntry<'planchas'>['data'];
    slug: string;
    prev?: CollectionEntry<'planchas'> | null;
    next?: CollectionEntry<'planchas'> | null;
    headings: { depth: number; slug: string; text: string }[];
}

const { data, slug, prev, next } = Astro.props;
// Extraemos los nuevos campos: logia, valle, simbolo
const { title, date, grado, tema, simbolo, autor, logia, valle, tags = [], orden } = data;

if (!date) {
    console.error(`PlanchaLayout: date es undefined para ${slug}`);
}

const publishedTime = date ? date.toISOString() : new Date().toISOString();
const description = `Plancha Nº ${orden}: "${title}". Tema: ${tema}. Grado: ${grado}.`;
const keywords = [tema, grado, 'masonería', 'esoterismo', autor, ...tags].join(', ');

const getGradoAbbr = (g: string) => {
    const lower = g.toLowerCase();
    if (lower.includes('aprendiz')) return 'A∴ M∴';
    if (lower.includes('compañero')) return 'C∴ M∴';
    return 'M∴ M∴';
};

const gradoAbbr = getGradoAbbr(grado);
const displayTags = tags.slice(0, 5);
---

<BaseLayout
        title={`${title} | El Damero`}
        description={description}
        type="article"
>
    <Fragment slot="head">
        <meta name="keywords" content={keywords} />
        <meta name="author" content={autor} />
        <meta property="article:published_time" content={publishedTime} />
        <meta property="article:author" content={autor} />
        <meta property="article:section" content={grado} />
        <meta property="article:tag" content={tema} />
    </Fragment>

    <div class="plancha-wrapper">
        <Breadcrumbs grado={grado} title={title} />

        <article class="plancha">
            {/* ════════════ HEADER ════════════ */}
            <header class="plancha-header">
                {/* Contexto de Logia */}
                {(logia || valle) && (
                        <div class="header-context">
                            {logia && <span>{logia}</span>}
                            {logia && valle && <span class="separator">•</span>}
                            {valle && <span>Vall∴ de {valle}</span>}
                        </div>
                )}

                <div class="header-meta">
                    <span class="numero">Plancha Nº {orden.toString().padStart(2, '0')}</span>
                    <span class="grado-badge">{grado}</span>
                </div>

                <h1 class="plancha-title">{title}</h1>

                <div class="header-tematica">
                    <p class="plancha-tema"><span class="label">Tema:</span> {tema}</p>
                    {simbolo && (
                            <p class="plancha-simbolo">
                                <span class="simbolo-icon">☡</span>
                                {simbolo}
                            </p>
                    )}
                </div>
            </header>

            {/* ════════════ CONTENIDO ════════════ */}
            <div class="plancha-contenido">
                <slot />
            </div>

            {/* ════════════ SHARE ════════════ */}
            <div class="share-section no-print">
                <ShareButtons title={title} description={description} />
            </div>

            {/* ════════════ TAGS ════════════ */}
            {displayTags.length > 0 && (
                    <footer class="plancha-tags">
                        <span class="tags-label">Claves:</span>
                        <div class="tags-list">
                            {displayTags.map(tag => (
                                    <a
                                            href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                                            class="tag-link"
                                    >
                                        {tag}
                                    </a>
                            ))}
                        </div>
                    </footer>
            )}

            {/* ════════════ FOOTER ÉPICO ════════════ */}
            <footer class="plancha-footer-epico">
                <div class="footer-divider">
                    <span class="divider-icon">∴</span>
                </div>

                <div class="footer-grid">
                    {/* COLUMNA IZQ: FECHA */}
                    <div class="footer-col side-col">
                        <span class="footer-label">
                            Trazado
                        </span>
                        {date && (
                                <time class="footer-value" datetime={publishedTime}>
                                    {date.toLocaleDateString('es-AR', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                        )}
                    </div>

                    {/* COLUMNA CENTRAL: FIRMA */}
                    <div class="footer-col center-col">
                        <div class="firma-sfu">S∴ F∴ U∴</div>
                        <div class="firma-nombre">{autor}</div>
                        <div class="firma-grado-badge">{gradoAbbr}</div>
                    </div>

                    {/* COLUMNA DER: ORDEN */}
                    <div class="footer-col side-col">
                        <span class="footer-label">
                            Orden
                        </span>
                        <span class="footer-value">#{orden.toString().padStart(3, '0')}</span>
                    </div>
                </div>

                <div class="footer-ornament"></div>
            </footer>

            {/* ════════════ NAV ════════════ */}
            <nav class="plancha-nav no-print">
                {prev ? (
                        <a href={`/planchas/${prev.slug}`} class="nav-button prev">
                            <span class="nav-label">← Anterior</span>
                            <span class="nav-text">{prev.data.title}</span>
                        </a>
                ) : (<div></div>)}

                {next ? (
                        <a href={`/planchas/${next.slug}`} class="nav-button next">
                            <span class="nav-label">Siguiente →</span>
                            <span class="nav-text">{next.data.title}</span>
                        </a>
                ) : (<div></div>)}
            </nav>

            <ScrollToTopHome />
        </article>
    </div>
</BaseLayout>

<style>
    /* ════════════ LAYOUT ════════════ */
    .plancha-wrapper {
        max-width: 1100px;
        margin: 0 auto;
        padding: var(--spacing-lg);
    }

    .plancha {
        background: var(--damero-charcoal);
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-md);
        padding: 3rem;
        line-height: 1.9;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    /* ════════════ HEADER ════════════ */
    .plancha-header {
        margin-bottom: 3.5rem;
        padding-bottom: 2.5rem;
        border-bottom: 1px solid var(--damero-line);
        text-align: center;
        position: relative;
    }

    .header-context {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--damero-gray-mid);
        margin-bottom: 1rem;
        opacity: 0.7;
    }

    .header-context .separator {
        margin: 0 0.5rem;
        color: var(--damero-gold-primary);
    }

    .header-meta {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        font-size: 0.85rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }

    .numero {
        color: var(--damero-gray-light);
        opacity: 0.8;
    }

    .grado-badge {
        border: 1px solid var(--damero-gold-primary);
        color: var(--damero-gold-primary);
        padding: 0.2rem 0.8rem;
        border-radius: 2px;
        font-size: 0.75rem;
        font-weight: var(--fw-semibold);
        letter-spacing: 0.1em;
    }

    .plancha-title {
        font-family: var(--font-serif-header);
        font-size: 3rem;
        line-height: 1.1;
        margin: 0.5rem 0 1.5rem 0;
        color: var(--damero-gold-primary);
        letter-spacing: -0.02em;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    .header-tematica {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        align-items: center;
    }

    .plancha-tema {
        color: var(--damero-gray-light);
        font-size: 1.15rem;
        margin: 0;
        line-height: 1.4;
    }

    .plancha-tema .label {
        color: var(--damero-gold-accent);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-right: 0.5rem;
    }

    .plancha-simbolo {
        color: var(--damero-gray-mid);
        font-size: 1rem;
        font-style: italic;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .simbolo-icon {
        color: var(--damero-gold-primary);
        font-size: 1.2rem;
    }

    /* ════════════ CONTENIDO ════════════ */
    .plancha-contenido {
        color: var(--damero-gray-light);
        font-size: 1.15rem;
        font-family: var(--font-serif-body);
    }

    /* --- CORRECCIÓN: OCULTAR HR --- */
    /* El markdown genera <hr> con '---', pero usamos H2 para separar secciones */
    .plancha-contenido :global(hr) {
        display: none;
    }

    /* Ocultar H1 duplicados del markdown */
    .plancha-contenido :global(h1) {
        display: none;
    }

    /* Ocultar elementos redundantes */
    .plancha-contenido :global(h1),
    .plancha-contenido :global(hr) {
        display: none;
    }

    /* Estilos para los H2 (Subtítulos) */
    .plancha-contenido :global(h2) {
        color: var(--damero-gold-primary);
        margin-top: 3.5rem; /* Margen normal para H2 intermedios */
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-size: 1.4rem;
        border-bottom: 1px solid rgba(212, 175, 55, 0.2); /* Línea DEBAJO del texto */
        border-top: none; /* Aseguramos que no haya línea arriba */
        padding-bottom: 0.5rem;
        text-align: center;
    }

    /* CORRECCIÓN CLAVE: El primer H2 del texto no necesita tanto margen ni líneas arriba */
    .plancha-contenido :global(h2:first-of-type) {
        margin-top: 0; /* Eliminamos el hueco gigante */
        padding-top: 1rem;
    }

    .plancha-contenido :global(h3) {
        color: var(--damero-gold-accent);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        font-size: 1.25rem;
        font-weight: bold;
        letter-spacing: 0.02em;
    }

    .plancha-contenido :global(p) {
        margin-bottom: 1.8rem;
        text-align: justify;
        text-justify: inter-word;
    }

    .plancha-contenido :global(ul) {
        list-style: none;
        padding-left: 1rem;
    }

    .plancha-contenido :global(ul li) {
        position: relative;
        padding-left: 1.8rem;
        margin-bottom: 0.8rem;
    }

    .plancha-contenido :global(ul li::before) {
        content: "∴";
        position: absolute;
        left: 0;
        color: var(--damero-gold-primary);
        font-size: 0.9rem;
        top: 0.4rem;
    }

    .plancha-contenido :global(blockquote) {
        position: relative;
        border: 1px solid var(--damero-gold-primary);
        /* Reduje un poco el padding (de 2.5rem a 2rem) */
        padding: 2rem 2.5rem;
        margin: 3rem 0;
        background: rgba(18, 18, 18, 0.4);
        font-style: italic;
        color: var(--damero-gray-pale);
        font-size: 1.35rem;
        line-height: 1.6;
        text-align: center;
        font-weight: 500;
    }

    .plancha-contenido :global(blockquote p) {
        margin: 0;
    }

    .plancha-contenido :global(blockquote::before) {
        content: "“";
        position: absolute;
        top: -1.5rem;
        left: 50%;
        transform: translateX(-50%);
        background: var(--damero-charcoal);
        padding: 0 1rem;
        font-size: 3rem;
        color: var(--damero-gold-primary);
        font-family: serif;
        line-height: 1;
    }

    .plancha-contenido :global(strong) {
        color: white;
        font-weight: 600;
    }

    /* Tablas responsivas */
    .plancha-contenido :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 2.5rem 0;
        font-size: 1rem;
        border: 1px solid var(--damero-line);
        display: block;
        overflow-x: auto;
    }

    .plancha-contenido :global(th) {
        background: rgba(212, 175, 55, 0.1);
        color: var(--damero-gold-primary);
        padding: 1.2rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.9rem;
        border-bottom: 1px solid var(--damero-gold-primary);
        text-align: left;
    }

    .plancha-contenido :global(td) {
        padding: 1.2rem;
        border-bottom: 1px solid var(--damero-line);
        color: var(--damero-gray-light);
    }

    /* ════════════ TAGS & FOOTER ════════════ */

    .share-section {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .plancha-tags {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--damero-line);
        flex-wrap: wrap;
    }

    .tags-label {
        color: var(--damero-gray-dark);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: var(--fw-semibold);
    }

    .tags-list {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .tag-link {
        background: var(--damero-dark);
        border: 1px solid var(--damero-line);
        color: var(--damero-gold-accent);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-xs);
        font-size: 0.8rem;
        text-decoration: none;
        transition: all var(--transition-fast);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .tag-link:hover {
        border-color: var(--damero-gold-primary);
        background: var(--damero-charcoal);
        color: var(--damero-gold-primary);
    }

    /* ════════════ FOOTER ÉPICO ════════════ */

    .plancha-footer-epico {
        margin-top: 3rem;
        padding: 3rem 0;
        position: relative;
        border-top: 1px solid var(--damero-line);
        border-bottom: 1px solid var(--damero-line);
        background: rgba(255, 255, 255, 0.01);
    }

    .footer-divider {
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--damero-charcoal);
        padding: 0 1rem;
    }

    .divider-icon {
        color: var(--damero-gold-primary);
        font-size: 1.2rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1fr 1.5fr 1fr;
        align-items: center;
        gap: 2rem;
    }

    .footer-col {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .side-col {
        gap: 0.5rem;
        text-align: center;
        font-size: 0.95rem;
    }

    .footer-grid > .side-col:first-child {
        border-right: 1px solid var(--damero-line-dark);
    }
    .footer-grid > .side-col:last-child {
        border-left: 1px solid var(--damero-line-dark);
    }

    .footer-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--damero-gray-mid);
        font-weight: var(--fw-semibold);
    }

    .footer-value {
        font-family: var(--font-serif-body);
        color: var(--damero-gray-light);
        font-style: italic;
    }

    .center-col {
        text-align: center;
        gap: 0.5rem;
    }

    .firma-sfu {
        font-size: 0.9rem;
        letter-spacing: 0.3em;
        color: var(--damero-gold-dark);
        margin-bottom: 0.2rem;
        opacity: 0.9;
    }

    .firma-nombre {
        font-family: var(--font-serif-header);
        font-size: 2rem;
        color: var(--damero-gold-primary);
        font-weight: var(--fw-bold);
        letter-spacing: 0.05em;
        line-height: 1.2;
    }

    .firma-grado-badge {
        display: inline-block;
        margin-top: 0.5rem;
        padding: 0.2rem 1rem;
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-xs);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: var(--damero-gold-accent);
    }

    .footer-ornament {
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--damero-gold-primary), transparent);
        opacity: 0.3;
    }

    /* ════════════ NAV ════════════ */

    .plancha-nav {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        margin-top: 3rem;
        padding-top: 2rem;
    }

    .nav-button {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1.5rem;
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-md);
        text-decoration: none;
        transition: all var(--transition-smooth);
        background: var(--damero-dark);
    }

    .nav-button:hover {
        border-color: var(--damero-gold-primary);
        background: var(--damero-charcoal);
        box-shadow: var(--shadow-lg);
    }

    .nav-label {
        font-size: 0.85rem;
        color: var(--damero-gray-light);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: var(--fw-semibold);
    }

    .nav-text {
        font-size: 1.1rem;
        font-family: var(--font-serif-header);
        color: var(--damero-gold-primary);
        font-weight: var(--fw-bold);
        line-height: 1.3;
    }

    .nav-button:hover .nav-text {
        color: var(--damero-gold-accent);
    }

    .nav-button.prev {
        text-align: left;
    }

    .nav-button.next {
        text-align: right;
    }

    /* ════════════ RESPONSIVE ════════════ */

    @media (max-width: 900px) {
        .plancha-wrapper {
            padding: var(--spacing-md);
        }

        .plancha-title { font-size: 2.5rem; }
    }

    @media (max-width: 768px) {
        .plancha {
            padding: 2rem 1.5rem;
            line-height: 1.6;
        }

        .plancha-title {
            font-size: 2rem;
        }

        .plancha-contenido {
            font-size: 1.05rem;
        }

        .plancha-contenido :global(p) {
            text-align: left;
        }

        .plancha-contenido :global(blockquote) {
            padding: 2rem 1rem;
            font-size: 1.2rem;
        }

        .plancha-contenido :global(ul) {
            padding-left: 0;
            margin-left: 0;
            margin-bottom: 2rem;
        }

        .plancha-contenido :global(ul li) {
            padding-left: 1.2rem;
        }

        .plancha-contenido :global(ul li::before) {
            top: 0.5rem;
        }

        .header-context {
            flex-direction: column;
            gap: 0.2rem;
        }

        .header-context .separator {
            display: none;
        }

        .footer-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-grid > .side-col:first-child,
        .footer-grid > .side-col:last-child {
            border: none;
            border-bottom: 1px dashed var(--damero-line-dark);
            padding-bottom: 1rem;
        }

        .center-col {
            order: -1;
            margin-bottom: 1rem;
        }

        .plancha-nav {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .nav-button {
            text-align: center;
        }
    }

    /* ════════════ PRINT ════════════ */

    @media print {
        .plancha-nav,
        .no-print,
        .share-section {
            display: none !important;
        }

        .plancha {
            background: white !important;
            border: none !important;
            color: black !important;
            padding: 0 !important;
            box-shadow: none !important;
        }

        .plancha-title,
        .plancha-contenido :global(h2),
        .plancha-contenido :global(h3),
        .grado-badge,
        .tag-link,
        .firma-grado-badge,
        .footer-value,
        .firma-nombre {
            color: black !important;
            border-color: black !important;
        }

        .plancha-footer-epico,
        .plancha-header,
        .plancha-tags {
            border-color: #ddd !important;
            background: transparent !important;
        }

        .plancha-contenido {
            color: black !important;
        }

        body {
            background: white !important;
        }
    }
</style>