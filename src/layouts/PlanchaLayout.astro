---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ShareButtons from '../components/ShareButtons.astro';
import ScrollToTopHome from '../components/ScrollToTopHome.astro';

interface Props {
    data: CollectionEntry<'planchas'>['data'];
    slug: string;
    prev?: CollectionEntry<'planchas'> | null;
    next?: CollectionEntry<'planchas'> | null;
    headings: { depth: number; slug: string; text: string }[];
}

const { data, slug, prev, next } = Astro.props;
const { title, date, grado, tema, autor, tags = [], orden } = data;

if (!date) {
    console.error(`PlanchaLayout: date es undefined para ${slug}`);
}

const publishedTime = date ? date.toISOString() : new Date().toISOString();
const description = `Plancha ${orden} sobre ${tema} - Grado ${grado}. ${title}`;
const keywords = [tema, grado, 'masonería', 'Lavagnini', autor, ...tags].join(', ');

const getGradoAbbr = (g: string) => {
    const lower = g.toLowerCase();
    if (lower.includes('aprendiz')) return 'A∴ M∴';
    if (lower.includes('compañero')) return 'C∴ M∴';
    return 'M∴ M∴';
};

const gradoAbbr = getGradoAbbr(grado);
const displayTags = tags.slice(0, 3);
---

<BaseLayout
        title={`${title} | El Damero`}
        description={description}
        type="article"
>
    <Fragment slot="head">
        <meta name="keywords" content={keywords} />
        <meta name="author" content={autor} />
        <meta property="article:published_time" content={publishedTime} />
        <meta property="article:author" content={autor} />
        <meta property="article:section" content={grado} />
        <meta property="article:tag" content={tema} />
    </Fragment>

    <div class="plancha-wrapper">
        <Breadcrumbs grado={grado} title={title} />

        <article class="plancha">
            {/* ════════════ HEADER ════════════ */}
            <header class="plancha-header">
                <div class="header-meta">
                    <span class="numero">Plancha Nº {orden.toString().padStart(2, '0')}</span>
                    <span class="grado">{grado}</span>
                </div>

                <h1 class="plancha-title">{title}</h1>

                <p class="plancha-tema">{tema}</p>
            </header>

            {/* ════════════ CONTENIDO ════════════ */}
            <div class="plancha-contenido">
                <slot />
            </div>

            {/* ════════════ SHARE ════════════ */}
            <div class="share-section no-print">
                <ShareButtons title={title} description={description} />
            </div>

            {/* ════════════ TAGS ════════════ */}
            {displayTags.length > 0 && (
                    <footer class="plancha-tags">
                        <span class="tags-label">Temas:</span>
                        <div class="tags-list">
                            {displayTags.map(tag => (
                                    <a
                                            href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                                            class="tag-link"
                                    >
                                        {tag}
                                    </a>
                            ))}
                        </div>
                    </footer>
            )}

            {/* ════════════ FOOTER ÉPICO (MERGE) ════════════ */}
            <footer class="plancha-footer-epico">
                <div class="footer-divider">
                    <span class="divider-icon">∴</span>
                </div>

                <div class="footer-grid">
                    {/* COLUMNA IZQ: FECHA */}
                    <div class="footer-col side-col">
                        <span class="footer-label">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                            Trazado
                        </span>
                        {date && (
                                <time class="footer-value" datetime={publishedTime}>
                                    {date.toLocaleDateString('es-AR', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                        )}
                    </div>

                    {/* COLUMNA CENTRAL: FIRMA */}
                    <div class="footer-col center-col">
                        <div class="firma-sfu">S∴ F∴ U∴</div>
                        <div class="firma-nombre">{autor}</div>
                        <div class="firma-grado-badge">{gradoAbbr}</div>
                    </div>

                    {/* COLUMNA DER: FOLIACIÓN */}
                    <div class="footer-col side-col">
                        <span class="footer-label">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>
                            Foliación
                        </span>
                        <span class="footer-value">Plancha Nº {orden.toString().padStart(2, '0')}</span>
                    </div>
                </div>

                <div class="footer-ornament"></div>
            </footer>

            {/* ════════════ NAV ════════════ */}
            <nav class="plancha-nav no-print">
                {prev && (
                        <a href={`/planchas/${prev.slug}`} class="nav-button prev">
                            <span class="nav-label">← Anterior</span>
                            <span class="nav-text">{prev.data.title}</span>
                        </a>
                )}
                {!prev && <div></div>}

                <div></div>

                {next && (
                        <a href={`/planchas/${next.slug}`} class="nav-button next">
                            <span class="nav-label">Siguiente →</span>
                            <span class="nav-text">{next.data.title}</span>
                        </a>
                )}
            </nav>

            <ScrollToTopHome />
        </article>
    </div>
</BaseLayout>

<style>
    /* ════════════ LAYOUT ════════════ */

    .plancha-wrapper {
        max-width: 1100px;
        margin: 0 auto;
        padding: var(--spacing-lg);
    }

    .plancha {
        background: var(--damero-charcoal);
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-md);
        padding: 3rem;
        line-height: 1.9;
    }

    /* ════════════ HEADER ════════════ */

    .plancha-header {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--damero-line);
        text-align: center; /* Centrado para estilo épico */
    }

    .header-meta {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        font-size: 0.85rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }

    .numero {
        color: var(--damero-gray-light);
        font-weight: var(--fw-semibold);
        letter-spacing: 0.1em;
    }

    .grado {
        border: 1px solid var(--damero-gold-primary);
        color: var(--damero-gold-primary);
        padding: 0.4rem 1rem;
        border-radius: var(--radius-xs);
        font-weight: var(--fw-semibold);
    }

    .plancha-title {
        font-size: 2.2rem;
        line-height: 1.15;
        margin: 0 0 1rem 0;
        color: var(--damero-gold-primary);
        letter-spacing: 0.05em;
    }

    .plancha-tema {
        color: var(--damero-gray-light);
        font-style: italic;
        font-size: 1.05rem;
        margin: 0;
        line-height: 1.6;
        opacity: 0.8;
    }

    /* ════════════ CONTENIDO ════════════ */

    .plancha-contenido {
        margin-bottom: 3rem;
        color: var(--damero-gray-light);
        font-size: 1.1rem;
        letter-spacing: 0.3px;
        word-spacing: 0.15em;
    }

    .plancha-contenido :global(h2) {
        color: var(--damero-gold-primary);
        margin-top: 3rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        font-size: 1.4rem;
        border-top: 1px solid var(--damero-line);
        padding-top: 1.5rem;
    }

    .plancha-contenido :global(h3) {
        color: var(--damero-gold-accent);
        margin-top: 1.8rem;
        margin-bottom: 0.8rem;
        font-size: 1.15rem;
        letter-spacing: 0.04em;
    }

    .plancha-contenido :global(p) {
        margin-bottom: 1.75rem;
        text-align: justify;
        line-height: 1.85;
        hyphens: auto;
    }

    .plancha-contenido :global(ul),
    .plancha-contenido :global(ol) {
        margin-left: 2rem;
        margin-bottom: 1.5rem;
    }

    .plancha-contenido :global(li) {
        margin-bottom: 0.75rem;
    }

    .plancha-contenido :global(em) {
        color: var(--damero-gold-accent);
        font-style: italic;
    }

    .plancha-contenido :global(strong) {
        color: var(--damero-gray-pale);
        font-weight: var(--fw-bold);
    }

    .plancha-contenido :global(blockquote) {
        border-left: 4px solid var(--damero-gold-primary);
        padding-left: var(--spacing-md);
        color: var(--damero-gray-dark);
        font-style: italic;
        margin: var(--spacing-md) 0;
    }

    .plancha-contenido :global(h2 + p::first-letter) {
        font-size: 3.5rem;
        font-weight: bold;
        color: var(--damero-gold-primary);
        float: left;
        line-height: 0.8;
        margin-right: 0.1em;
        margin-top: 0.1em;
    }

    .plancha-contenido :global(aside) {
        border-left: 4px solid var(--damero-gold-primary);
        background: rgba(212, 175, 55, 0.08);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        margin: 2rem 0;
        font-size: 1.05rem;
        color: var(--damero-gray-light);
        line-height: 1.8;
    }

    .plancha-contenido :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius-sm);
        margin: 1.5rem 0;
    }

    .plancha-contenido :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
        display: block;
        overflow-x: auto;
    }

    /* ════════════ SHARE & TAGS ════════════ */

    .share-section {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .plancha-tags {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin: 2rem 0;
        padding: 1.5rem 0;
        border-top: 1px solid var(--damero-line);
        flex-wrap: wrap;
    }

    .tags-label {
        color: var(--damero-gray-dark);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: var(--fw-semibold);
    }

    .tags-list {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .tag-link {
        background: var(--damero-dark);
        border: 1px solid var(--damero-line);
        color: var(--damero-gold-accent);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-xs);
        font-size: 0.85rem;
        text-decoration: none;
        transition: all var(--transition-fast);
    }

    .tag-link:hover {
        border-color: var(--damero-gold-primary);
        background: var(--damero-charcoal);
        color: var(--damero-gold-primary);
    }

    /* ════════════ FOOTER ÉPICO ════════════ */

    .plancha-footer-epico {
        margin-top: 2rem;
        padding: 3rem 0;
        position: relative;
        border-top: 1px solid var(--damero-line);
        border-bottom: 1px solid var(--damero-line);
        background: rgba(255, 255, 255, 0.01);
    }

    .footer-divider {
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--damero-charcoal);
        padding: 0 1rem;
    }

    .divider-icon {
        color: var(--damero-gold-primary);
        font-size: 1.2rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1fr 1.5fr 1fr;
        align-items: center;
        gap: 2rem;
    }

    .footer-col {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .side-col {
        gap: 0.5rem;
        text-align: center;
        font-size: 0.9rem;
    }

    .footer-grid > .side-col:first-child {
        border-right: 1px solid var(--damero-line-dark);
    }
    .footer-grid > .side-col:last-child {
        border-left: 1px solid var(--damero-line-dark);
    }

    .footer-label {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--damero-gray-mid);
        font-weight: var(--fw-semibold);
    }

    .footer-label svg {
        opacity: 0.6;
        color: var(--damero-gold-primary);
    }

    .footer-value {
        font-family: var(--font-serif-body);
        color: var(--damero-gray-light);
        font-style: italic;
    }

    .center-col {
        text-align: center;
        gap: 0.5rem;
    }

    .firma-sfu {
        font-size: 0.85rem;
        letter-spacing: 0.3em;
        color: var(--damero-gold-dark);
        margin-bottom: 0.2rem;
        opacity: 0.9;
    }

    .firma-nombre {
        font-family: var(--font-serif-header);
        font-size: 1.8rem;
        color: var(--damero-gold-primary);
        font-weight: var(--fw-bold);
        letter-spacing: 0.05em;
        line-height: 1.2;
    }

    .firma-grado-badge {
        display: inline-block;
        margin-top: 0.5rem;
        padding: 0.2rem 0.8rem;
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-xs);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: var(--damero-gold-accent);
    }

    .footer-ornament {
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--damero-gold-primary), transparent);
        opacity: 0.3;
    }

    /* ════════════ NAV ════════════ */

    .plancha-nav {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 2rem;
        margin-top: 3rem;
        padding-top: 2rem;
    }

    .nav-button {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1.5rem;
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-md);
        text-decoration: none;
        transition: all var(--transition-smooth);
        background: var(--damero-dark);
    }

    .nav-button:hover {
        border-color: var(--damero-gold-primary);
        background: var(--damero-charcoal);
        box-shadow: var(--shadow-lg);
    }

    .nav-label {
        font-size: 0.8rem;
        color: var(--damero-gray-light);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: var(--fw-semibold);
    }

    .nav-text {
        font-size: 1rem;
        font-family: var(--font-serif-header);
        color: var(--damero-gold-primary);
        font-weight: var(--fw-bold);
        line-height: 1.3;
    }

    .nav-button:hover .nav-text {
        color: var(--damero-gold-accent);
    }

    .nav-button.prev {
        text-align: left;
    }

    .nav-button.next {
        text-align: right;
    }

    /* ════════════ RESPONSIVE ════════════ */

    @media (max-width: 768px) {
        .plancha-wrapper {
            padding: var(--spacing-md);
        }

        .plancha {
            padding: 2rem 1.5rem;
        }

        .plancha-title {
            font-size: 1.8rem;
        }

        /* Responsive Footer */
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-grid > .side-col:first-child,
        .footer-grid > .side-col:last-child {
            border: none;
            border-bottom: 1px dashed var(--damero-line-dark);
            padding-bottom: 1rem;
        }

        .center-col {
            order: -1; /* Firma primero en móvil */
            margin-bottom: 1rem;
        }

        .plancha-nav {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .nav-button {
            text-align: center;
        }
    }

    @media (max-width: 480px) {
        .plancha {
            padding: 1.5rem 1rem;
        }

        .plancha-title {
            font-size: 1.5rem;
        }

        .firma-nombre {
            font-size: 1.4rem;
        }
    }

    /* ════════════ PRINT ════════════ */

    @media print {
        .plancha-nav,
        .no-print,
        .share-section {
            display: none !important;
        }

        .plancha {
            background: white !important;
            border: none !important;
            color: black !important;
            padding: 0 !important;
            box-shadow: none !important;
        }

        .plancha-title,
        .plancha-contenido :global(h2),
        .plancha-contenido :global(h3),
        .card-grado,
        .tag-link,
        .firma-grado-badge,
        .footer-value,
        .firma-nombre {
            color: black !important;
            border-color: black !important;
        }

        .plancha-footer-epico,
        .plancha-header,
        .plancha-tags {
            border-color: #ddd !important;
            background: transparent !important;
        }

        .plancha-contenido {
            color: black !important;
        }

        body {
            background: white !important;
        }
    }
</style>