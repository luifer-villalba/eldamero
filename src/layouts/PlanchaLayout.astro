---
import type { CollectionEntry } from 'astro:content';

interface Props {
    data: CollectionEntry<'planchas'>['data'];
    slug: string;
}

const { data, slug } = Astro.props;
const { title, date, grado, tema, autor, logia, valle } = data;

const formattedDate = date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | El Damero</title>
    <style is:global>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            font-family: 'Georgia', serif;
            background: #0a0a0a;
            color: #e8e8e8;
            line-height: 1.6;
        }

        body {
            padding: 2rem;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: #1a1a1a;
            border: 2px solid #c9a961;
            padding: 3rem;
            box-shadow: 0 0 20px rgba(201, 169, 97, 0.2);
        }

        .masonic-header {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #c9a961;
        }

        .invocacion {
            font-size: 0.9rem;
            letter-spacing: 0.3em;
            color: #c9a961;
            margin-bottom: 1rem;
        }

        .logia-info {
            font-size: 0.85rem;
            color: #888;
            margin-bottom: 1rem;
        }

        .dirigido {
            font-style: italic;
            color: #aaa;
            margin-bottom: 1rem;
            font-size: 0.95rem;
        }

        h1 {
            font-size: 1.8rem;
            color: #c9a961;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .meta {
            display: flex;
            gap: 2rem;
            font-size: 0.9rem;
            color: #999;
            margin-top: 1rem;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            gap: 0.5rem;
        }

        .meta-label {
            color: #c9a961;
            font-weight: bold;
        }

        .content {
            margin: 2rem 0;
            line-height: 1.8;
        }

        .content :global(p) {
            margin-bottom: 1rem;
            text-align: justify;
        }

        .content :global(h2) {
            color: #c9a961;
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
            font-size: 1.2rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .content :global(h3) {
            color: #aaa;
            margin-top: 1rem;
            font-size: 1rem;
        }

        .content :global(ul), .content :global(ol) {
            margin-left: 2rem;
            margin-bottom: 1rem;
        }

        .content :global(li) {
            margin-bottom: 0.5rem;
        }

        .content :global(em) {
            color: #c9a961;
        }

        .firmas {
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid #c9a961;
            text-align: center;
            font-size: 0.9rem;
        }

        .firma {
            margin-bottom: 1rem;
        }

        .rango {
            color: #c9a961;
            font-weight: bold;
        }

        .nav {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1rem;
        }

        .nav a {
            color: #c9a961;
            text-decoration: none;
            margin: 0 1rem;
            transition: color 0.3s;
        }

        .nav a:hover {
            color: #e8e8e8;
        }

        @media (max-width: 600px) {
            .container {
                padding: 1.5rem;
            }
            h1 {
                font-size: 1.5rem;
            }
            .meta {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <div class="masonic-header">
        <div class="invocacion">A∴ L∴ G∴ D∴ G∴ A∴ D∴ U∴</div>

        {logia && <div class="logia-info">R∴ L∴ S∴ {logia}</div>}
        {valle && <div class="logia-info">Vall∴ de {valle}, {formattedDate}</div>}

        <div class="dirigido">V∴ M∴ • Q∴ H∴ Vig∴ • QQ∴ HH∴ Todos</div>

        <h1>{title}</h1>

        <div class="meta">
            <div class="meta-item">
                <span class="meta-label">Grado:</span>
                <span>{grado}</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Tema:</span>
                <span>{tema}</span>
            </div>
        </div>
    </div>

    <div class="content">
        <slot />
    </div>

    <div class="firmas">
        <div class="firma">
            <div class="rango">{autor}</div>
            <div class="rango">M∴ M∴</div>
            <div>S∴ F∴ U∴</div>
        </div>
    </div>

    <div class="nav">
        <a href="/planchas">← Volver al índice</a>
    </div>
</div>
</body>
</html>