---
interface Props {
    title?: string;
    subtitle?: string;
}

const {
    title = "El Damero",
    subtitle = "Un viaje operativo desde el Aprendiz hasta el Maestro, explorando los tres grados simbólicos a través de Lavagnini. Cada plancha descodifica símbolos, herramientas y enseñanzas masónicas, conectándolas con dos realidades: el trabajo en logia y la vida profana diaria. Geometría, hermetismo y construcción interior sin mambo, solo práctica."
} = Astro.props;
---

<header class="masonic-header">
    <div class="invocacion">A∴ L∴ G∴ D∴ G∴ A∴ D∴ U∴</div>
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}

    <nav class="header-nav">
        <a href="/" class="nav-link">Planchas</a>
        <a href="/tags" class="nav-link">Etiquetas</a>
        <a href="/glosario" class="nav-link">Glosario</a>
    </nav>
</header>

<style>
    .masonic-header {
        text-align: center;
        margin-bottom: var(--spacing-xl);
        padding-bottom: var(--spacing-lg);
        border-bottom: 2px solid var(--damero-gold);
    }

    .invocacion {
        margin-bottom: var(--spacing-sm);
    }

    h1 {
        margin-bottom: var(--spacing-sm);
    }

    .subtitle {
        font-size: 1.1rem;
        color: var(--damero-gray-light);
        font-style: italic;
        margin: 0 auto;
        max-width: 800px;
    }

    .header-nav {
        display: flex;
        justify-content: center;
        gap: var(--spacing-md);
        margin-top: var(--spacing-md);
    }

    .nav-link {
        color: var(--damero-gold);
        text-decoration: none;
        padding: var(--spacing-xs) var(--spacing-sm);
        border: 1px solid var(--damero-gold);
        transition: var(--transition-smooth);
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .nav-link:hover {
        background: var(--damero-gold);
        color: var(--damero-black);
    }

    @media print {
        .header-nav {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .subtitle {
            font-size: 0.95rem;
        }

        .header-nav {
            flex-direction: column;
            gap: var(--spacing-xs);
        }

        .nav-link {
            font-size: 0.85rem;
        }
    }
</style>