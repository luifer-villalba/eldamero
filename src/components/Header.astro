---
interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<header class="header">
    <div class="container header-content">
        {/* Logo/Título */}
        <a href="/" class="logo" transition:name="logo">
            EL DAMERO
        </a>

        {/* Navegación Principal */}
        <nav class="nav-primary">
            <ul class="nav-list">
                <li><a href="/" class="nav-link">Inicio</a></li>
                <li><a href="/glosario" class="nav-link">Glosario</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    .header {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: var(--damero-black);
        border-bottom: 1px solid var(--damero-line);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
        gap: var(--spacing-lg);
    }

    /* ═══════════════════════════════════════════
       LOGO
       ═══════════════════════════════════════════ */

    .logo {
        font-family: var(--font-serif-header);
        font-size: 1.3rem;
        font-weight: var(--fw-bold);
        letter-spacing: 0.15em;
        color: var(--damero-gold-primary);
        text-decoration: none;
        transition: color var(--transition-fast);
        white-space: nowrap;
    }

    .logo:hover {
        color: var(--damero-gold-accent);
    }

    /* ═══════════════════════════════════════════
       NAVEGACIÓN PRINCIPAL
       ═══════════════════════════════════════════ */

    .nav-primary {
        flex: 1;
        display: flex;
        justify-content: flex-end;
    }

    .nav-list {
        display: flex;
        list-style: none;
        gap: 2.5rem;
        margin: 0;
        padding: 0;
    }

    .nav-link {
        font-size: 0.95rem;
        letter-spacing: 0.05em;
        color: var(--damero-gray-light);
        text-decoration: none;
        position: relative;
        transition: color var(--transition-fast);
        text-transform: uppercase;
        font-weight: var(--fw-semibold);
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--damero-gold-primary);
        transition: width var(--transition-smooth);
    }

    .nav-link:hover {
        color: var(--damero-gold-primary);
    }

    .nav-link:hover::after {
        width: 100%;
    }

    /* ═══════════════════════════════════════════
       RESPONSIVE
       ═══════════════════════════════════════════ */

    @media (max-width: 768px) {
        .header-content {
            height: auto;
            padding: 1rem 0;
            gap: 1.5rem;
            min-height: 70px;
        }

        .logo {
            font-size: 1rem;
            flex-shrink: 0;
        }

        .nav-primary {
            flex: 0 1 auto;
        }

        .nav-list {
            gap: 1.2rem;
        }

        .nav-link {
            font-size: 0.8rem;
            letter-spacing: 0.04em;
        }
    }

    @media (max-width: 480px) {
        .header-content {
            height: auto;
            padding: 0.75rem 0;
            gap: 1rem;
            min-height: 60px;
        }

        .logo {
            font-size: 0.9rem;
            letter-spacing: 0.12em;
            flex-shrink: 0;
        }

        .nav-list {
            gap: 0.8rem;
        }

        .nav-link {
            font-size: 0.7rem;
            letter-spacing: 0.03em;
        }
    }
</style>