---
interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<header class="header">
    <div class="container header-content">
        {/* Logo/Título con Icono SVG */}
        <a href="/" class="logo" transition:name="logo">
            {/* INICIO: SVG del Damero Diamante */}
            <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 100 100"
                    aria-labelledby="dameroIconTitle"
                    role="img"
                    class="logo-icon"
            >
                <title id="dameroIconTitle">Icono El Damero</title>
                {/* Partes Doradas (Usando variables CSS) */}
                <path d="M50 0 L75 25 L50 50 L25 25 Z M50 50 L75 75 L50 100 L25 75 Z" fill="var(--damero-gold-primary)"/>
                {/* Partes Carbón (Usando variables CSS) */}
                <path d="M25 25 L50 50 L25 75 L0 50 Z M75 25 L100 50 L75 75 L50 50 Z" fill="var(--damero-charcoal)"/>
            </svg>
            {/* FIN: SVG del Damero Diamante */}

            <span class="logo-text">EL DAMERO</span>
        </a>

        {/* Navegación Principal */}
        <nav class="nav-primary">
            <ul class="nav-list">
                <li><a href="/" class="nav-link">Inicio</a></li>
                <li><a href="/glosario" class="nav-link">Glosario</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    .header {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: var(--damero-black);
        border-bottom: 1px solid var(--damero-line);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
        gap: var(--spacing-lg);
    }

    /* ═══════════════════════════════════════════
       LOGO (Estilos Ajustados para incluir el SVG)
       ═══════════════════════════════════════════ */

    .logo {
        display: flex; /* Añadido: Activa Flexbox para alinear icono y texto */
        align-items: center; /* Añadido: Centra el icono y el texto verticalmente */
        gap: 0.5rem; /* Añadido: Espacio entre el icono y el texto */

        /* Estilos originales */
        font-family: var(--font-serif-header);
        font-size: 1.3rem;
        font-weight: var(--fw-bold);
        letter-spacing: 0.15em;
        color: var(--damero-gold-primary);
        text-decoration: none;
        transition: color var(--transition-fast);
        white-space: nowrap;
    }

    /* Estilo del texto del logo (lo separamos del .logo principal) */
    .logo-text {
        /* Mantiene la fuente, el color, etc. definidos en .logo */
        line-height: 1; /* Asegura un mejor centrado vertical */
    }

    /* Nuevo estilo para el icono SVG */
    .logo-icon {
        height: 1.25em; /* Ajusta el tamaño del icono a un poco menos que el tamaño de la fuente */
        width: auto;
        flex-shrink: 0; /* Evita que el SVG se encoja en pantallas pequeñas */
        margin-bottom: -1px; /* Ajuste óptico fino para alinear con el texto */
    }

    .logo:hover {
        color: var(--damero-gold-accent);
    }

    /* ═══════════════════════════════════════════
       NAVEGACIÓN PRINCIPAL
       ═══════════════════════════════════════════ */
    /* ... (El resto de los estilos de navegación son los mismos) ... */

    .nav-primary {
        flex: 1;
        display: flex;
        justify-content: flex-end;
    }

    .nav-list {
        display: flex;
        list-style: none;
        gap: 2.5rem;
        margin: 0;
        padding: 0;
    }

    .nav-link {
        font-size: 0.95rem;
        letter-spacing: 0.05em;
        color: var(--damero-gray-light);
        text-decoration: none;
        position: relative;
        transition: color var(--transition-fast);
        text-transform: uppercase;
        font-weight: var(--fw-semibold);
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--damero-gold-primary);
        transition: width var(--transition-smooth);
    }

    .nav-link:hover {
        color: var(--damero-gold-primary);
    }

    .nav-link:hover::after {
        width: 100%;
    }

    /* ═══════════════════════════════════════════
       RESPONSIVE
       ═══════════════════════════════════════════ */

    @media (max-width: 768px) {
        .header-content {
            height: auto;
            padding: 1rem 0;
            gap: 1.5rem;
            min-height: 70px;
        }

        .logo {
            font-size: 1rem;
            flex-shrink: 0;
            gap: 0.3rem; /* Ajuste de espacio en móvil */
        }

        .logo-icon {
            height: 1.2em; /* Ajuste de tamaño de icono en móvil */
        }

        .nav-primary {
            flex: 0 1 auto;
        }

        .nav-list {
            gap: 1.2rem;
        }

        .nav-link {
            font-size: 0.8rem;
            letter-spacing: 0.04em;
        }
    }

    @media (max-width: 480px) {
        .header-content {
            height: auto;
            padding: 0.75rem 0;
            gap: 1rem;
            min-height: 60px;
        }

        .logo {
            font-size: 0.9rem;
            letter-spacing: 0.12em;
            flex-shrink: 0;
            gap: 0.25rem; /* Ajuste de espacio en móvil pequeño */
        }

        .logo-icon {
            height: 1.1em; /* Ajuste de tamaño de icono en móvil pequeño */
        }

        .nav-list {
            gap: 0.8rem;
        }

        .nav-link {
            font-size: 0.7rem;
            letter-spacing: 0.03em;
        }
    }
</style>