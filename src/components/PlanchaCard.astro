---
interface Props {
    title: string;
    slug: string;
    grado: string;
    date: Date;
    tema: string;
    autor: string;
    orden: number;
}

const { title, slug, grado, date, tema, autor, orden } = Astro.props;

const formattedDate = date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

const paddedOrden = orden.toString().padStart(2, '0');
---

<a
        href={`/planchas/${slug}`}
        class="plancha-card"
        data-title={title.toLowerCase()}
        data-tema={tema.toLowerCase()}
        data-grado={grado.toLowerCase()}
>
    <div class="card-inner">
        {/* NÚMERO DE FONDO CON ESTILO "OUTLINE" */}
        <div class="card-numero-bg">{paddedOrden}</div>

        {/* CONTENIDO PRINCIPAL */}
        <div class="card-content">
            {/* CABEZAL: Grado a la izq | Número a la der */}
            <div class="card-header-row">
                <span class="card-grado">{grado}</span>

                {/* NÚMERO DESTACADO EN ORO Y SERIF */}
                <div class="card-orden-badge">
                    <span class="orden-label">Nº</span>
                    <span class="orden-value">{paddedOrden}</span>
                </div>
            </div>

            {/* TÍTULO */}
            <h3 class="card-title">{title}</h3>

            {/* TEMA */}
            {tema && <p class="card-tema">{tema}</p>}
        </div>

        {/* FOOTER: Solo fecha */}
        <div class="card-footer">
            <span class="card-fecha">{formattedDate}</span>
        </div>

        {/* OVERLAY HOVER */}
        <div class="card-overlay"></div>
    </div>
</a>

<style>
    .plancha-card {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: transform var(--transition-fast);
        height: 100%;
    }

    .plancha-card:focus-visible {
        outline: 2px solid var(--damero-gold-primary);
        outline-offset: 4px;
    }

    /* Efecto sutil de elevación al pasar el mouse */
    .plancha-card:hover {
        transform: translateY(-2px);
    }

    .card-inner {
        position: relative;
        background: var(--damero-dark);
        border: 1px solid transparent;
        border-radius: var(--radius-md);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        height: 100%;
        overflow: hidden;
        transition: all var(--transition-smooth);
    }

    .plancha-card:hover .card-inner {
        border-color: var(--damero-line);
        background: var(--damero-charcoal);
        box-shadow: var(--shadow-md);
    }

    .plancha-card:hover .card-overlay {
        opacity: 1;
    }

    /* ═══════════════════════════════════════════
       NÚMERO DE FONDO "OUTLINE" (AJUSTADO)
       ═══════════════════════════════════════════ */

    .card-numero-bg {
        position: absolute;
        top: -15px;
        right: -10px;
        font-size: 7rem;
        font-weight: 800;
        font-family: var(--font-serif-header);
        line-height: 1;
        color: transparent;
        /* Aumentada la opacidad del contorno para mejor definición */
        -webkit-text-stroke: 2px rgba(255, 255, 255, 0.05);
        user-select: none;
        pointer-events: none;
        transition: all var(--transition-slow);
    }

    .plancha-card:hover .card-numero-bg {
        -webkit-text-stroke: 2px rgba(212, 175, 55, 0.15);
    }

    /* ═══════════════════════════════════════════
       CABEZAL (Grado + Número) (COLORES MEJORADOS)
       ═══════════════════════════════════════════ */

    .card-header-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
    }

    .card-grado {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        /* CAMBIO: Color más claro y dorado para mejor contraste */
        color: var(--damero-gold-accent);
        font-weight: var(--fw-semibold);
        margin-top: 4px;
    }

    .card-orden-badge {
        display: flex;
        align-items: baseline;
        gap: 2px;
        color: var(--damero-gold-primary);
        font-family: var(--font-serif-header);
    }

    .orden-label {
        font-size: 0.8rem;
        font-style: italic;
        /* CAMBIO: Mayor opacidad */
        opacity: 0.9;
    }

    .orden-value {
        font-size: 1.4rem;
        font-weight: var(--fw-bold);
        line-height: 1;
    }

    /* ═══════════════════════════════════════════
       CONTENIDO (COLORES MEJORADOS)
       ═══════════════════════════════════════════ */

    .card-title {
        font-size: 1.5rem;
        font-weight: var(--fw-bold);
        font-family: var(--font-serif-header);
        line-height: 1.2;
        /* CAMBIO: Usamos el color dorado principal por defecto */
        color: var(--damero-gold-primary);
        margin: 0;
        transition: color var(--transition-fast);
        margin-bottom: 0.5rem;
    }

    .plancha-card:hover .card-title {
        /* Sutil brillo al hacer hover */
        text-shadow: 0 0 10px rgba(212, 175, 55, 0.2);
    }

    .card-tema {
        /* CAMBIO: Color mucho más claro para legibilidad */
        color: var(--damero-gray-light);
        font-style: italic;
        font-size: 1rem;
        margin: 0;
        line-height: 1.5;
        /* CAMBIO: Mayor opacidad */
        opacity: 0.9;
    }

    /* ═══════════════════════════════════════════
       FOOTER (COLORES MEJORADOS)
       ═══════════════════════════════════════════ */

    .card-footer {
        margin-top: auto;
        padding-top: 1.5rem;
        display: flex;
        align-items: center;
        /* Línea separadora más visible */
        border-top: 1px solid var(--damero-line);
    }

    .card-fecha {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--damero-gray-light);
        font-weight: var(--fw-semibold);
    }

    /* ═══════════════════════════════════════════
       OVERLAY
       ═══════════════════════════════════════════ */

    .card-overlay {
        position: absolute;
        inset: 0;
        /* Degradado más sutil */
        background: linear-gradient(180deg, transparent 70%, rgba(0, 0, 0, 0.3) 100%);
        opacity: 0;
        transition: opacity var(--transition-smooth);
        pointer-events: none;
    }

    /* ═══════════════════════════════════════════
       RESPONSIVE
       ═══════════════════════════════════════════ */

    @media (max-width: 768px) {
        .card-inner {
            padding: 1.5rem;
        }

        .card-numero-bg {
            font-size: 5rem;
        }

        .card-title {
            font-size: 1.3rem;
        }
    }
</style>