---
interface Props {
    title: string;
    slug: string;
    grado: string;
    date: Date;
    tema: string;
    autor: string;
    orden: number;
}

const { title, slug, grado, date, tema, autor, orden } = Astro.props;

const formattedDate = date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<a
        href={`/planchas/${slug}`}
        class="plancha-card"
        transition:name={`card-${slug}`}
        data-title={title.toLowerCase()}
        data-tema={tema.toLowerCase()}
        data-grado={grado.toLowerCase()}
>
    {/* Número de Plancha (Background subtle) */}
    <div class="card-number" aria-hidden="true">
        {orden.toString().padStart(2, '0')}
    </div>

    {/* Contenedor de Contenido (z-index para estar sobre el número) */}
    <div class="card-inner">
        {/* META: Número y Grado */}
        <div class="card-meta">
            <span class="card-numero">Nº {orden.toString().padStart(2, '0')}</span>
            <span class="card-grado">{grado}</span>
        </div>

        {/* TÍTULO Principal */}
        <h3 class="card-title">{title}</h3>

        {/* TEMA: Subtítulo/Descripción */}
        <p class="card-tema">{tema}</p>

        {/* INFO Inferior: Autor + Fecha */}
        <div class="card-footer">
            <span class="card-autor">{autor}</span>
            <span class="card-date">{formattedDate}</span>
        </div>
    </div>

    {/* Overlay hover sutil */}
    <div class="card-overlay" aria-hidden="true"></div>
</a>

<style>
    /* ═══════════════════════════════════════════
       CONTENEDOR CARD
       ═══════════════════════════════════════════ */

    .plancha-card {
        display: grid;
        grid-template-rows: 1fr;
        position: relative;
        background: var(--damero-charcoal);
        border: 1px solid var(--damero-line);
        border-radius: var(--radius-md);
        padding: 2rem;
        gap: 1.5rem;
        cursor: pointer;
        text-decoration: none;
        overflow: hidden;
        transition:
                all var(--transition-smooth),
                box-shadow var(--transition-smooth);
        z-index: 1;
    }

    /* Hover: Elevación y sombra dorada */
    .plancha-card:hover {
        border-color: var(--damero-gold-primary);
        background: var(--damero-dark);
        box-shadow: var(--shadow-lg);
        transform: translateY(-4px);
    }

    /* ═══════════════════════════════════════════
       NÚMERO BACKGROUND (Decorativo)
       ═══════════════════════════════════════════ */

    .card-number {
        position: absolute;
        top: -25px;
        right: -25px;
        font-size: 7rem;
        font-weight: var(--fw-bold);
        opacity: 0.04;
        font-family: var(--font-serif-header);
        z-index: 0;
        pointer-events: none;
    }

    /* ═══════════════════════════════════════════
       CONTENIDO INTERNO (z-index 2, sobre número)
       ═══════════════════════════════════════════ */

    .card-inner {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: relative;
        z-index: 2;
    }

    /* ═══════════════════════════════════════════
       META: Número y Grado
       ═══════════════════════════════════════════ */

    .card-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.8rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
    }

    .card-numero {
        color: var(--damero-gray-dark);
        font-weight: var(--fw-semibold);
    }

    .card-grado {
        border: 1px solid var(--damero-gold-primary);
        color: var(--damero-gold-primary);
        padding: 0.35rem 0.85rem;
        border-radius: var(--radius-xs);
        font-weight: var(--fw-semibold);
        transition: all var(--transition-fast);
    }

    .plancha-card:hover .card-grado {
        background: var(--damero-gold-primary);
        color: var(--damero-black);
    }

    /* ═══════════════════════════════════════════
       TÍTULO
       ═══════════════════════════════════════════ */

    .card-title {
        font-family: var(--font-serif-header);
        font-size: 1.6rem;
        font-weight: var(--fw-bold);
        color: var(--damero-gold-primary);
        margin: 0;
        line-height: 1.25;
        letter-spacing: 0.04em;
        transition: color var(--transition-fast);
    }

    .plancha-card:hover .card-title {
        color: var(--damero-gold-accent);
    }

    /* ═══════════════════════════════════════════
       TEMA (Descripción/Subtítulo)
       ═══════════════════════════════════════════ */

    .card-tema {
        color: var(--damero-gray-dark);
        font-style: italic;
        font-size: 0.95rem;
        margin: 0;
        line-height: 1.6;
    }

    /* ═══════════════════════════════════════════
       FOOTER: Autor + Fecha
       ═══════════════════════════════════════════ */

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--damero-line-dark);
        font-size: 0.85rem;
    }

    .card-autor {
        color: var(--damero-gray-light);
        font-weight: var(--fw-semibold);
        letter-spacing: 0.03em;
    }

    .card-date {
        color: var(--damero-gray-dark);
        font-size: 0.8rem;
    }

    /* ═══════════════════════════════════════════
       OVERLAY Hover (Swipe gradient sutil)
       ═══════════════════════════════════════════ */

    .card-overlay {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
                90deg,
                transparent,
                rgba(212, 175, 55, 0.05),
                transparent
        );
        transition: left var(--transition-smooth);
        pointer-events: none;
        z-index: 1;
    }

    .plancha-card:hover .card-overlay {
        left: 100%;
    }

    /* ═══════════════════════════════════════════
       RESPONSIVE
       ═══════════════════════════════════════════ */

    @media (max-width: 768px) {
        .plancha-card {
            padding: 1.5rem;
        }

        .card-number {
            font-size: 5rem;
            top: -15px;
            right: -15px;
        }

        .card-title {
            font-size: 1.4rem;
        }

        .card-tema {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .plancha-card {
            padding: 1.25rem;
        }

        .card-title {
            font-size: 1.2rem;
        }

        .card-meta {
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .card-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
    }
</style>