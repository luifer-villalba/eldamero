---
interface Props {
    title: string;
    slug: string;
    grado: string;
    date: Date;
    tema: string;
    autor: string;
    orden: number;
}

const {title, slug, grado, date, tema, autor, orden} = Astro.props;

// Usaremos 'long' para el mes para una apariencia mÃ¡s formal.
const formattedDate = date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<a href={`/planchas/${slug}`}
   class="plancha-card"
   data-grado={grado}
   data-title={title.toLowerCase()}
   data-tema={tema.toLowerCase()}
   transition:name={`card-${slug}`}>

    <div class="card-number">{orden.toString().padStart(2, '0')}</div>

    <div class="card-header">
        <h2 class="card-title">{title}</h2>
        <span class="meta-badge">{grado}</span>
    </div>

    <div class="card-meta">
        <span title="Fecha de Trazado">ğŸ“… {formattedDate}</span>
        <span title="Tema Principal">ğŸ“š {tema}</span>
    </div>

    <div class="card-autor">
        Por: <strong class="card-autor-name">{autor}</strong>
    </div>
</a>

<style>
    /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       Estilos de la Tarjeta (Arte Real)
       â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
    .plancha-card {
        background: var(--damero-dark);
        border: 1px solid var(--damero-border); /* Borde mÃ¡s sutil por defecto */
        padding: var(--spacing-md);
        text-decoration: none;
        color: inherit;
        transition: var(--transition-smooth);
        display: flex; /* Usamos flex para controlar mejor la altura */
        flex-direction: column;
        position: relative;
        overflow: hidden;
        min-height: 180px; /* Asegura una altura mÃ­nima uniforme */

        /* Brillo sutil inicial */
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
    }

    .card-number {
        position: absolute;
        bottom: var(--spacing-xs);
        right: var(--spacing-sm);
        font-size: 5rem; /* MÃ¡s grande para mayor impacto visual */
        font-weight: bold;
        color: rgba(201, 169, 97, 0.06); /* Menos opaco, mÃ¡s sutil */
        line-height: 1;
        pointer-events: none;
        z-index: 0;
        font-family: var(--font-serif-header); /* Usamos Cinzel para formalidad */
    }

    /* Efecto Hover: Swipe y ElevaciÃ³n */
    .plancha-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        /* Gradiente mÃ¡s sutil */
        background: linear-gradient(
                90deg,
                transparent,
                rgba(204, 170, 102, 0.1), /* Usando la nueva variable de oro */
                transparent
        );
        transition: left 0.5s ease;
        z-index: 0;
    }

    .plancha-card:hover::before {
        left: 100%;
    }

    .plancha-card:hover {
        background: var(--damero-darker);
        /* Sombra dorada al hacer hover */
        box-shadow: 0 4px 15px rgba(204, 170, 102, 0.4);
        border-color: var(--damero-gold);
        transform: translateY(-5px); /* ElevaciÃ³n mÃ¡s notable */
    }

    .plancha-card:hover .card-number {
        color: rgba(204, 170, 102, 0.1); /* Sutil aumento de opacidad */
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: var(--spacing-sm); /* MÃ¡s espacio despuÃ©s del tÃ­tulo */
        flex-wrap: wrap;
        gap: var(--spacing-sm);
        position: relative;
        z-index: 1;
    }

    .card-title {
        font-size: 1.4rem; /* Ligeramente mÃ¡s grande */
        color: var(--damero-gold-light); /* Color mÃ¡s claro para que resalte mÃ¡s rÃ¡pido */
        margin: 0;
        flex: 1;
        min-width: 200px;
        line-height: 1.2;
    }

    .meta-badge {
        background: var(--damero-dark);
        border: 1px solid var(--damero-gold);
        padding: 0.3rem 0.8rem;
        color: var(--damero-gold);
        border-radius: 4px; /* Ligeramente mÃ¡s redondeado */
        font-size: 0.8rem;
        white-space: nowrap;
        font-family: var(--font-serif-header); /* Usa Cinzel */
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Meta: Fecha y Tema */
    .card-meta {
        display: flex;
        flex-direction: column; /* Apila la fecha y el tema */
        gap: var(--spacing-xs);
        font-size: 0.9rem;
        color: var(--damero-gray-light); /* Mejor contraste */
        flex-wrap: wrap;
        position: relative;
        z-index: 1;
        margin-bottom: var(--spacing-sm);
        flex-grow: 1; /* Empuja el autor hacia abajo */
    }

    /* Autor: Base formal */
    .card-autor {
        margin-top: auto; /* Empuja a la base */
        padding-top: var(--spacing-sm);
        border-top: 1px solid var(--damero-border);
        font-size: 0.85rem;
        color: var(--damero-gray);
        position: relative;
        z-index: 1;
    }

    .card-autor-name {
        color: var(--damero-white); /* Destaca el nombre del autor */
        font-weight: 600;
        font-family: var(--font-serif-header);
    }

    @media (max-width: 600px) {
        .plancha-card {
            min-height: 160px;
        }

        .card-number {
            font-size: 4rem;
        }

        .card-title {
            font-size: 1.2rem;
            min-width: 100%;
        }

        .meta-badge {
            width: auto;
            text-align: center;
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>