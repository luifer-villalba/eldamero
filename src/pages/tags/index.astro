---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const planchas = await getCollection('planchas');

// Extraer todos los tags únicos
const tagsMap = new Map<string, number>();

planchas.forEach(plancha => {
    const tags = plancha.data.tags || [];
    tags.forEach(tag => {
        const count = tagsMap.get(tag) || 0;
        tagsMap.set(tag, count + 1);
    });
});

// Ordenar por nombre
const sortedTags = Array.from(tagsMap.entries())
    .sort((a, b) => a[0].localeCompare(b[0]));
---

<BaseLayout
        title="Etiquetas | El Damero"
        description="Explora planchas masónicas por etiquetas y temas"
>
    <Header />

    <div class="container">
        <div class="tags-header">
            <h1>Etiquetas</h1>
            <p class="subtitle">Explora las planchas por tema</p>
        </div>

        {sortedTags.length > 0 ? (
                <div class="tags-grid">
                    {sortedTags.map(([tag, count]) => (
                            <a
                                    href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                                    class="tag-card"
                            >
                                <span class="tag-name">{tag}</span>
                                <span class="tag-count">{count} plancha{count !== 1 ? 's' : ''}</span>
                            </a>
                    ))}
                </div>
        ) : (
                <div class="empty">
                    <p>Aún no hay etiquetas definidas. Comenzá agregando tags en el frontmatter de tus planchas.</p>
                </div>
        )}
    </div>

    <Footer />
</BaseLayout>

<style>
    /* El contenedor ahora es el .container global y no tiene borde */
    .tags-header {
        margin-bottom: var(--spacing-lg);
    }

    h1 {
        text-align: center;
        /* Usamos el Cinzel de la global.css */
        margin-bottom: var(--spacing-xs);
        /* Restauramos el letter-spacing del global.css */
        letter-spacing: 0.1em;
    }

    .subtitle {
        text-align: center;
        color: var(--damero-gray);
        margin-bottom: var(--spacing-xl); /* Más espacio después del subtítulo */
        font-style: italic;
    }

    .tags-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-xl);
    }

    .tag-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: var(--spacing-md);
        background: var(--damero-dark); /* Fondo sutil para separar */

        /* Borde más sutil que antes */
        border: 1px solid var(--damero-border);

        text-decoration: none;
        transition: var(--transition-smooth);
        min-height: 100px;
    }

    /* HOVER: Iluminación Sutil (Efecto Resplandor) */
    .tag-card:hover {
        background: var(--damero-darker); /* Fondo solo ligeramente más oscuro en hover */
        transform: translateY(-2px);
        /* El brillo dorado ahora es el foco del hover */
        box-shadow: 0 0 10px rgba(204, 170, 102, 0.5);
        border-color: var(--damero-gold);
    }

    .tag-name {
        font-size: 1.15rem; /* Ligeramente más grande */
        color: var(--damero-gold);
        font-weight: 600;
        margin-bottom: var(--spacing-xs);
        text-align: center;
        font-family: var(--font-serif-header); /* Autoridad visual */
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .tag-card:hover .tag-name {
        color: var(--damero-gold-light); /* Brillo del texto en hover */
    }

    .tag-count {
        font-size: 0.85rem;
        color: var(--damero-gray);
    }

    .tag-card:hover .tag-count {
        color: var(--damero-gray-light); /* Mejor contraste de texto en hover */
    }

    .empty {
        text-align: center;
        padding: var(--spacing-xl);
        color: var(--damero-gray);
        border: 1px dashed var(--damero-gray);
        background: var(--damero-darker);
    }

    @media (max-width: 768px) {
        .tags-grid {
            grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
        }

        .tag-card {
            min-height: 80px;
        }
    }
</style>