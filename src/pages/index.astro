---
import { getCollection } from 'astro:content';

const planchas = await getCollection('planchas');
const sorted = planchas.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>El Damero | Planchas MasÃ³nicas</title>
    <style is:global>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            font-family: 'Georgia', serif;
            background: #0a0a0a;
            color: #e8e8e8;
            line-height: 1.6;
        }

        body {
            padding: 2rem;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 2px solid #c9a961;
        }

        .invocacion {
            font-size: 1rem;
            letter-spacing: 0.3em;
            color: #c9a961;
            margin-bottom: 1rem;
        }

        h1 {
            font-size: 2.5rem;
            color: #c9a961;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .subtitle {
            font-size: 1.1rem;
            color: #aaa;
            font-style: italic;
        }

        .planchas-grid {
            display: grid;
            gap: 1.5rem;
        }

        .plancha-card {
            background: #1a1a1a;
            border: 1px solid #c9a961;
            padding: 1.5rem;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            display: block;
        }

        .plancha-card:hover {
            background: #252525;
            box-shadow: 0 0 15px rgba(201, 169, 97, 0.3);
            border-color: #e8d5b7;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 0.5rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .card-title {
            font-size: 1.3rem;
            color: #c9a961;
            margin-bottom: 0.5rem;
        }

        .card-meta {
            display: flex;
            gap: 1rem;
            font-size: 0.85rem;
            color: #888;
            flex-wrap: wrap;
        }

        .meta-badge {
            background: rgba(201, 169, 97, 0.1);
            border: 1px solid #c9a961;
            padding: 0.25rem 0.75rem;
            color: #c9a961;
            border-radius: 3px;
        }

        .card-tema {
            color: #aaa;
            margin-top: 0.5rem;
            font-size: 0.95rem;
        }

        .card-autor {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #333;
            font-size: 0.9rem;
            color: #888;
        }

        .empty {
            text-align: center;
            padding: 3rem;
            color: #666;
        }

        @media (max-width: 600px) {
            h1 {
                font-size: 1.8rem;
            }
            .card-title {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
<div class="container">
