---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import SearchBar from '../components/SearchBar.astro';
import FilterBar from '../components/FilterBar.astro';
import PlanchaCard from '../components/PlanchaCard.astro';
import Footer from '../components/Footer.astro';

// Obtener y ordenar planchas
const planchas = await getCollection('planchas');
const sorted = planchas.sort((a, b) => a.data.orden - b.data.orden);
const grados = [...new Set(planchas.map(p => p.data.grado))].sort();

// Schema.org para SEO
const websiteSchema = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "El Damero",
    "description": "Del Aprendiz al Maestro: estudio operativo de los tres grados simbólicos de la masonería",
    "url": "https://eldamero.com",
    "inLanguage": "es-AR",
    "potentialAction": {
        "@type": "SearchAction",
        "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://eldamero.com/?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
    }
};
---

<BaseLayout title="El Damero | Planchas Masónicas">
    <Header />

    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    {/* ═══════════════════════════════════════════
        HERO SECTION — Estilo "Gentleman Mason"
        ═══════════════════════════════════════════ */}
    <section class="hero">
        {/* FONDO DECORATIVO (CSS PURO) */}
        <div class="hero-bg-pattern" aria-hidden="true"></div>
        <div class="hero-overlay" aria-hidden="true"></div>

        <div class="container hero-content">

            {/* 1. INVOCACIÓN (Ritualística) */}
            <div class="invocar">
                A∴ L∴ G∴ D∴ G∴ A∴ D∴ U∴
            </div>

            {/* 2. TÍTULO DE IMPACTO (Texto Mejorado) */}
            <h1 class="hero-title">
                <span class="title-highlight">Masonería Operativa</span>
            </h1>

            {/* 3. SUBTÍTULO ELEGANTE */}
            <p class="hero-subtitle">
                El Arte Real: Del Aprendiz al Maestro
            </p>

            {/* 4. DESCRIPCIÓN REFINADA (Más directa) */}
            <div class="hero-description">
                <p>
                    Descodificamos los símbolos, herramientas y enseñanzas de los tres grados a través de Lavagnini.
                    Conectando el rigor del <strong>trabajo en Logia</strong> con la realidad de la <strong>vida profana</strong>.
                </p>
                <p class="hero-motto">
                    Construcción interior. <span class="motto-highlight">Sin especulación vacía.</span>
                </p>
            </div>

            {/* 5. CTA (DESCENSO) */}
            <div class="hero-cta">
                <span class="cta-text">Desciende al Taller</span>
                <div class="cta-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14"/><path d="m19 12-7 7-7-7"/></svg>
                </div>
            </div>
        </div>
    </section>

    {sorted.length > 0 && (
            <>
                {/* ═══════════════════════════════════════════
                BUSCADOR
                ═══════════════════════════════════════════ */}
                <div class="search-wrapper">
                    <div class="container">
                        <SearchBar />
                    </div>
                </div>

                {/* ═══════════════════════════════════════════
                FILTROS POR GRADO
                ═══════════════════════════════════════════ */}
                <div class="filter-wrapper">
                    <div class="container">
                        <FilterBar grados={grados} />
                    </div>
                </div>
            </>
    )}

    {/* ═══════════════════════════════════════════
        GRID DE PLANCHAS
        ═══════════════════════════════════════════ */}
    <div class="container planchas-grid-container">
        {/* Título de sección */}
        <div class="section-header">
            <h2>Planchas del Taller</h2>
            <p class="section-intro">
                {sorted.length} estudios masónicos organizados por grado de iniciación
            </p>
        </div>

        {sorted.length > 0 ? (
                <div class="planchas-grid">
                    {sorted.map(({ data, slug }) => (
                            <PlanchaCard
                                    title={data.title}
                                    slug={slug}
                                    grado={data.grado}
                                    date={data.date}
                                    tema={data.tema}
                                    autor={data.autor}
                                    orden={data.orden}
                            />
                    ))}
                </div>
        ) : (
                <div class="empty-state">
                    <p>Sin planchas aún. Comenzá a agregar tus trazados.</p>
                </div>
        )}
    </div>

    <Footer />
</BaseLayout>

<style>
    /* ═══════════════════════════════════════════
       HERO SECTION — Estilo "Gentleman Mason"
       ═══════════════════════════════════════════ */

    .hero {
        position: relative;
        /* Ocupa el 85% de la altura de la pantalla para impacto */
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        text-align: center;
        background-color: var(--damero-black);
        border-bottom: 1px solid var(--damero-line);
    }

    .hero-content {
        position: relative;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 900px;
        padding: 0 var(--spacing-md);
    }

    /* ════════════ FONDO DAMERO (CSS PURO) ════════════ */
    .hero-bg-pattern {
        position: absolute;
        inset: 0;
        opacity: 0.05; /* Muy sutil */
        /* Patrón de ajedrez generado con gradientes */
        background-image:
                linear-gradient(45deg, #333 25%, transparent 25%),
                linear-gradient(-45deg, #333 25%, transparent 25%),
                linear-gradient(45deg, transparent 75%, #333 75%),
                linear-gradient(-45deg, transparent 75%, #333 75%);
        background-size: 40px 40px;
        background-position: 0 0, 0 20px, 20px -20px, -20px 0px;
    }

    /* Viñeta para oscurecer los bordes y centrar la atención */
    .hero-overlay {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, transparent 0%, var(--damero-black) 90%);
        pointer-events: none;
        z-index: 1;
    }

    /* ════════════ TIPOGRAFÍA HERO ════════════ */

    /* Invocación */
    .invocar {
        font-family: var(--font-serif-header);
        font-size: 0.8rem;
        letter-spacing: 0.4em;
        color: var(--damero-gold-dark);

        margin-top: 5rem;
        margin-bottom: 2.5rem;

        font-weight: var(--fw-semibold);
        text-transform: uppercase;
        opacity: 0.8;
        animation: fadeInDown 0.8s ease-out;
    }

    /* Título (Visualmente corregido) */
    .hero-title {
        font-family: var(--font-serif-header);
        /* Clamp hace que el texto sea gigante pero no rompa en móvil */
        font-size: clamp(3.5rem, 10vw, 6.5rem);
        line-height: 1.1;
        margin: 0 0 1.5rem 0;
        text-align: center;
        animation: fadeInDown 0.8s ease-out 0.2s both;
    }

    .title-highlight {
        color: var(--damero-gold-primary);
        font-weight: var(--fw-bold);
        text-shadow: 0 0 40px rgba(212, 175, 55, 0.25);
        display: block; /* Asegura que ocupe su propia línea si es necesario */
    }

    /* Subtítulo */
    .hero-subtitle {
        font-size: 1.5rem;
        font-family: var(--font-serif-body);
        font-style: italic;
        color: var(--damero-gray-light);
        margin-bottom: 3rem;
        letter-spacing: 0.02em;
        animation: fadeInDown 0.8s ease-out 0.4s both;
    }

    /* Descripción */
    .hero-description {
        font-size: 1.15rem;
        line-height: 1.8;
        color: var(--damero-gray-mid);
        max-width: 65ch;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .hero-description strong {
        color: var(--damero-gray-light);
        font-weight: var(--fw-semibold);
    }

    .hero-motto {
        margin-top: 2rem;
        font-size: 1.1rem;
        border-top: 1px solid var(--damero-line-dark);
        padding-top: 1.5rem;
        font-style: italic;
    }

    .motto-highlight {
        color: var(--damero-gold-primary);
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.1em;
        font-weight: var(--fw-bold);
        font-style: normal;
        margin-left: 0.5rem;
    }

    /* ════════════ CTA (SCROLL) ════════════ */
    .hero-cta {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.8rem;
        color: var(--damero-gray-dark);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        cursor: pointer;
        opacity: 0.7;
        transition: opacity var(--transition-fast);
        animation: fadeIn 1s ease-out 0.8s both;
    }

    .hero-cta:hover {
        opacity: 1;
        color: var(--damero-gold-primary);
    }

    /* Animación de la flecha */
    .cta-icon {
        color: var(--damero-gold-primary);
        animation: bounce 2s infinite;
    }

    /* ════════════ ANIMACIONES ════════════ */

    @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
        40% {transform: translateY(-5px);}
        60% {transform: translateY(-3px);}
    }

    /* ════════════ WRAPPERS & GRID ════════════ */

    .search-wrapper,
    .filter-wrapper {
        background: var(--damero-black);
        border-bottom: 1px solid var(--damero-line);
        padding: var(--spacing-lg) 0;
    }

    .filter-wrapper {
        margin-bottom: var(--spacing-lg);
    }

    .planchas-grid-container {
        padding-top: var(--spacing-2xl);
        padding-bottom: var(--spacing-2xl);
    }

    .section-header {
        text-align: center;
        margin-bottom: var(--spacing-2xl);
    }

    .section-header h2 {
        font-size: 2.2rem;
        color: var(--damero-gold-primary);
        margin-bottom: var(--spacing-md);
        letter-spacing: 0.05em;
    }

    .section-intro {
        font-size: 1.05rem;
        color: var(--damero-gray-light);
        margin: 0;
        font-style: italic;
    }

    .planchas-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
        gap: var(--spacing-lg);
        margin-bottom: var(--spacing-xl);
    }

    .empty-state {
        text-align: center;
        padding: var(--spacing-2xl);
        border: 1px dashed var(--damero-line);
        border-radius: var(--radius-md);
        background: var(--damero-charcoal);
        color: var(--damero-gray-dark);
    }

    .empty-state p {
        font-size: 1.1rem;
        margin: 0;
        color: var(--damero-gray-mid);
    }

    /* ════════════ RESPONSIVE GENERAL ════════════ */

    @media (max-width: 1024px) {
        .planchas-grid {
            grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
            gap: var(--spacing-md);
        }
    }

    @media (max-width: 768px) {
        .planchas-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-md);
        }

        .hero {
            min-height: 60vh;
        }

        .hero-title {
            font-size: 2.8rem;
        }

        .section-header h2 {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 480px) {
        .hero-title {
            font-size: 2.2rem;
        }

        .invocar {
            font-size: 0.7rem;
            letter-spacing: 0.2em;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }
    }
</style>